# Docker Environment Configuration Example
# Copy this file to .env.docker and configure your values

# Database Configuration (Docker network)
DATABASE_URL="postgresql://postgres:postgres123@postgres:5432/course_platform_dev"
DATABASE_URL_PROD="postgresql://postgres:postgres123@postgres:5432/course_platform"
POSTGRES_DB="course_platform"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres123"

# JWT Configuration
JWT_SECRET="dev-jwt-secret-key-change-in-production"
JWT_EXPIRES_IN="24h"

# Server Configuration
NODE_ENV="development"
PORT=3000

# Redis (Docker network)
REDIS_URL="redis://redis:6379"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH="./uploads"

# Logging
LOG_LEVEL="info"

# Stripe Configuration (para desenvolvimento)
STRIPE_PUBLISHABLE_KEY="pk_test_your_key_here"
STRIPE_SECRET_KEY="sk_test_your_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# AWS S3 Configuration (adicione suas chaves reais)
AWS_ACCESS_KEY_ID="your_access_key_here"
AWS_SECRET_ACCESS_KEY="your_secret_key_here"
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="your_bucket_name_here"
AWS_S3_IMAGES_FOLDER="images"
AWS_S3_VIDEOS_FOLDER="videos"
AWS_S3_DOCUMENTS_FOLDER="documents"
