{
  "name": "course-platform-backend",
  "version": "1.0.0",
  "description": "Course platform backend with Node.js, Fastify, Prisma, and Clean Architecture",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio --browser none",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:email": "tsx src/scripts/testEmail.ts",
    "validate:templates": "tsx src/scripts/validateEmailTemplates.ts",
    "preview:emails": "tsx src/scripts/generateEmailPreviews.ts"
  },
  "keywords": [
    "nodejs",
    "fastify",
    "prisma",
    "typescript",
    "clean-architecture",
    "course-platform"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.821.0",
    "@aws-sdk/s3-request-presigner": "^3.821.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/multipart": "^7.6.0",
    "@fastify/websocket": "^10.0.1",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@prisma/client": "^6.9.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/ws": "^8.18.1",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "fastify": "^4.24.3",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.8.0",
    "multer": "^2.0.0",
    "resend": "^3.2.0",
    "sharp": "^0.34.2",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "ws": "^8.18.2",
    "zod": "^3.25.42"
  },
  "pnpmOverrides": {
    "resend>@react-email/render>react": false,
    "resend>@react-email/render>react-dom": false
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/form-data": "^2.5.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mercadopago": "^1.5.11",
    "@types/multer": "^1.4.12",
    "@types/node": "^18.19.111",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "form-data": "^4.0.2",
    "jest": "^29.7.0",
    "prisma": "^6.9.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.3",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}